<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="..\..\..\Common\build.props" />
  <Import Project="..\..\..\Common\key.props" />
  <PropertyGroup>
    <Description>The P# bug-trace minimizer.</Description>
    <AssemblyName>PSharpMinimizer</AssemblyName>
    <RootNamespace>PSharpMinimizer</RootNamespace>
    <PackageTags>bug;trace;replay;minimize;psharp</PackageTags>
    <OutputType>Exe</OutputType>
    <OutputPath>..\..\..\bin\</OutputPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(OS)'=='Windows_NT'">
    <TargetFrameworks>netcoreapp2.1;net46;net45</TargetFrameworks>
  </PropertyGroup>
  <PropertyGroup Condition="'$(OS)'=='UNIX'">
    <TargetFrameworks>netcoreapp2.1</TargetFrameworks>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\Source\TestingServices\TestingServices.csproj" />
    <ProjectReference Include="..\Replayer\Replayer.csproj" />
  </ItemGroup>
</Project>